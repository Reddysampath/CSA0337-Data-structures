#include<stdio.h>
int main()
{
	int n,i;
	printf("enter the number of elements in the array:");
	scanf("%d",&n);
	int arr[n];
	printf("Enter %d elements in the array:",n);
	for( i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	printf("\nEven numbers in the array:");
	for( i=0;i<n;i++)
	{
		if(arr[i]%2==0)
		printf("%d\n",arr[i]);
	}
	printf("odd numbers in the array:");
	for(i=0;i<n;i++)
	{
		if(arr[i]%2==1)
		printf("%d\n",arr[i]);
	}
}
